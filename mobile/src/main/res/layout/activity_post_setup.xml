<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Settings button at the top left -->

    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="65dp"
        android:layout_height="43dp"
        android:layout_gravity="start"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/gear_button_desc"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_gear" />


    <!-- Emergency contacts label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#E41414"
            android:textSize="32sp"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="196dp"
            android:layout_height="107dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/app_logo"
            android:src="@drawable/ic_app_logo" />

        <!-- Status icon and text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:text="@string/status_no_wearables_connected"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/status_icon"
                android:layout_width="30dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/status_icon_desc"
                android:scaleType="fitCenter"
                android:src="@drawable/idle_indicator" />

        </LinearLayout>

        <TextView
            android:id="@+id/emergency_contacts_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/emergency_contacts"
            android:textColor="#E41414"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- List of emergency contacts -->
        <LinearLayout
            android:id="@+id/emergency_contacts_list"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical" />

        <!-- Emergency service number label -->

        <!-- Display emergency service number -->

        <TextView
            android:id="@+id/emergency_service_number_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/emergency_service_number"
            android:textColor="#E41414"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emergency_service_number"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>
